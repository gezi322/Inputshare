<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Inputshare.Views.ServerRunningView">

  <StackPanel Spacing="10">
    <ListBox Items="{Binding ServerDisplaysList}" SelectionMode="Single" SelectedItem="{Binding SelectedDisplay}"/>

    
    <StackPanel HorizontalAlignment="Center">
      <TextBlock Text="{Binding Path=SelectedDisplay, StringFormat=Display settings for {0}}"/>

      <StackPanel Orientation="Horizontal" Spacing="10">
        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
          <TextBlock Text="Left display"/>
          <ComboBox Items="{Binding ServerSelectableDisplayList}" SelectedItem="{Binding SelectedDisplay.LeftDisplay}"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
          <TextBlock Text="Right display"/>
          <ComboBox Items="{Binding ServerSelectableDisplayList}" SelectedItem="{Binding SelectedDisplay.RightDisplay}"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
          <TextBlock Text="Top display"/>
          <ComboBox Items="{Binding ServerSelectableDisplayList}" SelectedItem="{Binding SelectedDisplay.TopDisplay}"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
          <TextBlock Text="Bottom display"/>
          <ComboBox Items="{Binding ServerSelectableDisplayList}" SelectedItem="{Binding SelectedDisplay.BottomDisplay}"/>
        </StackPanel>
      </StackPanel>

      <StackPanel>
        <TextBlock Text="Hotkey:" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Spacing="15">
          <CheckBox Content="Alt" IsChecked="{Binding SelectedDisplay.Hotkey.Alt}"/>
          <CheckBox Content="Ctrl" IsChecked="{Binding SelectedDisplay.Hotkey.Ctrl}"/>
          <CheckBox Content="Shift" IsChecked="{Binding SelectedDisplay.Hotkey.Shift}"/>
          <CheckBox Content="Windows" IsChecked="{Binding SelectedDisplay.Hotkey.Windows}"/>
          <ComboBox Items="{Binding PossibleKeys}" SelectedItem="{Binding SelectedDisplay.Hotkey.Key}"/>
        </StackPanel>
        <Button Content="Set hotkey" Command="{Binding CommandSetHotkey}"/>
      </StackPanel>
      
    </StackPanel>

  </StackPanel>
</UserControl>
