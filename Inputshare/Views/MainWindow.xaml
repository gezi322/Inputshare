<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:InputshareB.ViewModels;assembly=InputshareB"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Inputshare.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Inputshare">

  <DockPanel>
    <StackPanel DockPanel.Dock="Top">
      <ContentControl Content="{Binding CurrentView}"/>
    </StackPanel>
    <Button DockPanel.Dock="Bottom" Background="LightGray"  MaxHeight="25" VerticalAlignment="Bottom" Content="{Binding CurrentView.BottomButtonText}" Command="{Binding CommandBottomButton}"/>
  </DockPanel>

</Window>
